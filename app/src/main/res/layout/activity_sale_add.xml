<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewcontrollers.activities.sales.SaleAddActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva Venta"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_margin="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorIcons"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton_save"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginStart="300dp"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/floatingActionButton_save"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp"/>
        <EditText
            android:id="@+id/editText_NumberGuide"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Guide Code"
            android:textColor="@color/colorDivider"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toEndOf="@id/imageView_1"
            app:layout_constraintEnd_toEndOf="parent"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_list_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_1"/>
        <Spinner
            android:id="@+id/spinner_nameClient"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:text="Client"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/editText_NumberGuide"
            app:layout_constraintEnd_toEndOf="parent"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_list_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_2"/>
        <Spinner
            android:id="@+id/spinner_nameEmployee"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:text="Employee"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/spinner_nameClient"
            app:layout_constraintEnd_toEndOf="parent"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_3"/>
        <EditText
            android:id="@+id/editText_dateSale"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:text="Date"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/spinner_nameEmployee"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent"/>



    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>